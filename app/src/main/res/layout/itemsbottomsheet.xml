<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomNavigationsheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textview"
    android:backgroundTint="#B3ABAB"
    android:paddingTop="30dp"
    android:paddingBottom="80dp"
    app:behavior_hideable="true"
    tools:context=".ItemsOnDate"
    app:behavior_peekHeight="0dp"
    android:layout_marginBottom="50dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">






    <TextView
        android:id="@+id/itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="Item Name"
        android:textColor="#000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/itemedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemname"
        android:layout_toRightOf="@+id/itemname"
        android:hint="product name"
        android:textSize="12sp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/textview"
        android:paddingStart="10dp" />








    <TextView
        android:id="@+id/Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemname"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="Product Amount"
        android:textColor="#000"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/AmountEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemname"
        android:layout_alignTop="@+id/Amount"
        android:layout_toRightOf="@+id/Amount"
        android:background="@drawable/textview"
        android:inputType="number"
        android:hint="product price"
        android:layout_marginEnd="3dp"
        android:textSize="12sp"
        android:text="0"

        android:paddingStart="10dp" />














    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Amount"
        android:layout_margin="10dp"
        android:text="Description"
        android:textColor="#000"
        android:textSize="15sp" />




    <EditText
        android:id="@+id/DescriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/Description"
        android:layout_margin="10dp"
        android:background="#fff"
        android:hint="Description here"
        android:paddingStart="10dp"
        android:textDirection="ltr" />

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/DescriptionEdit"
        android:layout_margin="10dp"
        android:background="@drawable/textview"
        android:backgroundTint="#673AB7"
        android:text="Done"
        android:textColor="#fff"
        android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>