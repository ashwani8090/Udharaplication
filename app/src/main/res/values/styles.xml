<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">

        <item name="android:textColor">#F7F3F3</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:popupAnimationStyle">@anim/scaling_anime</item>
        <item name="android:background">@drawable/logout</item>
        <item name="android:backgroundTint">#DA4B4949</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupMenuStyle">@drawable/logout</item>
        <item name="android:popupBackground">@drawable/logout</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="login" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="bottomsheet" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:background">@drawable/logout</item>


    </style>


</resources>
