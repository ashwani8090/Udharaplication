<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="#C9B6B0B0"
    android:layout_margin="5dp"
    android:gravity="center">

   <TextView
       android:id="@+id/pop_credit"
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:textColor="#000"
       android:text="Amount Recived"
       android:textStyle="bold"
       android:gravity="center"

       android:textSize="10sp"
       android:background="@drawable/textview"
       android:layout_margin="2dp"
       />
    <EditText
        android:id="@+id/pop_credit_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/pop_credit"
        android:background="@drawable/textview"
        android:inputType="number"
        android:text="0"
        android:hint="Enter amount you recived"
        android:textSize="12sp"
        android:paddingStart="10dp"
        android:layout_margin="2dp"/>

    <Button
        android:id="@+id/popup_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="DONE"
        android:layout_below="@+id/pop_credit_edit"
        android:layout_centerInParent="true"
        android:background="@drawable/textview"
        android:backgroundTint="#3F51B5"
        android:layout_marginBottom="5dp"/>





</RelativeLayout>